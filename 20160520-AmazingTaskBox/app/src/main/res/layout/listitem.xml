<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/ColorPrimary">

    <ImageView android:id="@+id/taskStateIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_question" />

    <TextView android:id="@+id/taskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/taskStateIcon"
        android:layout_toEndOf="@+id/taskStateIcon"
        android:layout_alignTop="@+id/taskStateIcon"
        android:textColor="@color/ColorText"
        android:textSize="16sp" />

    <TextView android:id="@+id/taskDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:layout_alignLeft="@+id/taskName"
        android:layout_alignStart="@+id/taskName"
        android:textColor="@color/ColorText"
        android:textSize="12sp" />

</RelativeLayout>